<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Customers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-secondary-subtle sticky-top bg-body-tertiary shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Banking System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/customers">Customers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/transactions">Transactions</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End Navbar -->

  <!-- Main Container -->
  <div class="container">
    <div class="mt-4 p-5 bg-light rounded">
      <h1>Customers</h1>
    </div>
    <!-- End Main Container -->

    <!-- Table code here -->
    <table class="table table-striped text-center shadow-sm p-3 my-2 bg-body-tertiary rounded">
      <thead>
        <tr>
          <th scope="col">Serial No.</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Current Balance</th>
        </tr>
      </thead>
      <tbody class="fw-medium">
        <% customersList.forEach((customer, index)=> { %>
          <tr class="<%= index % 2 === 0 ? 'table-dark-subtle' : 'table-primary-subtle' %>">
            <th scope="row">
              <%= index + 1 %>
            </th>
            <td>
              <%= customer.Name %>
            </td>
            <td>
              <%= customer.Email %>
            </td>
            <td>
              <%= customer.Current_Balance %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <!-- Customer Selection Form -->
    <div class="p-3 mt-4 bg-light rounded">
      <h2>Select Sender</h2>
      <form id="senderForm">
        <div class="form-group">
          <label class="fs-4 text-dark" for="senderSelect">Sender:</label>
          <select class="form-control py-2 my-2 border-dark" id="senderSelect" name="senderName">
            <% customersList.forEach((customer)=> { %>
              <option value="<%= customer.Name %>">
                <%= customer.Name %>
              </option>
              <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Transfer</button>
      </form>
    </div>
  </div>

  <script>
    var senderForm = document.getElementById("senderForm");
    senderForm.addEventListener("submit", function (event) {
      event.preventDefault();

      var senderName = document.getElementById("senderSelect").value;

      window.location.href =
        "/payment?senderName=" + encodeURIComponent(senderName);
    });
  </script>

  <!-- Footer -->
  <footer class="footer mt-3 py-3" style="background-color: #f8f9fa">
    <div class="container text-center">
      <p>
        Copyright &copy;
        <script>
          document.write(new Date().getFullYear());
        </script>
        All Rights Reserved
      </p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>

</body>

</html>